# Environment template for desk_display_hyperpixel4

# WeatherKit credentials
WEATHERKIT_TEAM_ID=
WEATHERKIT_KEY_ID=
WEATHERKIT_SERVICE_ID=
WEATHERKIT_PRIVATE_KEY=
WEATHERKIT_PRIVATE_KEY_PATH=
WEATHERKIT_API_URL=https://weatherkit.apple.com/api/v1/weather
WEATHERKIT_LANGUAGE=en
WEATHER_REFRESH_MINUTES=20

# Google Maps API
GOOGLE_MAPS_API_KEY=

# Location overrides
LATITUDE=
LONGITUDE=

# Travel profile configuration
TRAVEL_MODE=to_home
TRAVEL_TO_HOME_ORIGIN=224 W Hill St, Chicago, IL
TRAVEL_TO_HOME_DESTINATION=3912 Rutgers Ln, Northbrook, IL
TRAVEL_TO_WORK_ORIGIN=3912 Rutgers Ln, Northbrook, IL
TRAVEL_TO_WORK_DESTINATION=224 W Hill St, Chicago, IL

# Display options
DISPLAY_PROFILE=hyperpixel4_square
DISPLAY_WIDTH=
DISPLAY_HEIGHT=
DISPLAY_BACKEND=auto
DISPLAY_FULLSCREEN=1
DISPLAY_ROTATION=0
FONT_SCALE_FACTOR=1.15
DISPLAY_OVERRIDES_PATH=display_overrides.json
SMALL_RESULT_FLAG_H=48
SCOREBOARD_BACKGROUND_R=0
SCOREBOARD_BACKGROUND_G=0
SCOREBOARD_BACKGROUND_B=0
TEAM_STANDINGS_DISPLAY_SECONDS=5
HOURLY_FORECAST_HOURS=5

# Path overrides
DESK_DISPLAY_DATA_DIR=
DESK_DISPLAY_SCREENSHOT_DIR=
XDG_DATA_HOME=
XDG_RUNTIME_DIR=

# Admin server
ADMIN_DISABLE_AUTO_RENDER=
ADMIN_HOST=0.0.0.0
ADMIN_PORT=5001
ADMIN_DEBUG=
FLASK_DEBUG=

# Wi-Fi recovery helpers
WIFI_RECOVERY_LOG=
WIFI_INTERFACE=

# Inside sensor bus override
INSIDE_SENSOR_I2C_BUS=

# HTTP client
HTTP_CLIENT_USE_SYSTEM_PROXIES=

# Display driver overrides
SDL_VIDEODRIVER=

# Test and tooling toggles
DESK_DISPLAY_SKIP_DOTENV=
PYTEST_CURRENT_TEST=
SUDO_USER=
